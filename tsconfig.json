{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    //
    "plugins": [
      {
        "name": "next"
      }
    ],
    //
    "baseUrl": ".",
    "paths": {
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      //
      "@entities": ["./src/entities"],
      "@entities/*": ["./src/entities/*"],
      //
      "@features": ["./src/features"],
      "@features/*": ["./src/features/*"],
      //
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      //
      "@shared": ["./src/shared"],
      "@shared/*": ["./src/shared/*"],
      //
      "@widgets": ["./src/widgets"],
      "@widgets/*": ["./src/widgets/*"]
    }
  },
  //
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
